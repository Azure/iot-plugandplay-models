{
  "@context": "dtmi:dtdl:context;2",
  "@id": "dtmi:com:Microchip:SAM_IoT_WM;1",
  "@type": "Interface",
  "displayName": "SAM-IoT WM",
  "description": "Reports device temperature, light intensity, and the current state of the 2 buttons & 4 LEDs.  Provides ability to turn on/off any of the 4 LEDs.",
  "contents": [
    {
      "@type": [
        "Telemetry",
        "Temperature"
      ],
      "name": "temperature",
      "displayName": {
        "en": "Temperature"
      },
      "description": {
        "en": "Temperature in degrees Celsius from Microchip MCP9808 high-accuracy temperature sensor"
      },
      "schema": "integer",
      "unit": "degreeCelsius"
    },
    {
      "@type": [
        "Telemetry",
        "Illuminance"
      ],
      "name": "light",
      "displayName": {
        "en": "Brightness from light sensor"
      },
      "description": {
        "en": "Brightness in illuminance from Vishay TEMT6000X01 ambient light sensor"
      },
      "schema": "integer",
      "unit": "lux"
    },
    {
      "@type": [
        "Telemetry"
      ],
      "name": "button_event",
      "displayName": {
        "en": "SW0/SW1 button push event"
      },
      "description": {
        "en": "Event triggered when button is pressed"
      },
      "schema": {
        "@type": "Object",
        "fields": [
          {
            "name": "button_name",
            "schema": "string"
          },
          {
            "name": "press_count",
            "schema": "integer"
          }
        ]
      }
    },
    {
      "@type": [
        "Property"
      ],
      "name": "led_b",
      "displayName": {
        "en": "Blue LED state"
      },
      "description": {
        "en": "Returns current state of the Blue LED. If True, the Blue LED is on and the WiFi AP is connected."
      },
      "schema": "dtmi:com:Microchip:SAM_IoT_WM:LedState;1",
      "writable": false
    },
    {
      "@type": [
        "Property"
      ],
      "name": "led_g",
      "displayName": {
        "en": "Green LED state"
      },
      "description": {
        "en": "The current state of the Green LED. When it is on, SAM IoT is connected to Cloud."
      },
      "schema": "dtmi:com:Microchip:SAM_IoT_WM:LedState;1",
      "writable": false
    },
    {
      "@type": [
        "Property"
      ],
      "name": "led_r",
      "displayName": {
        "en": "Red LED state"
      },
      "description": {
        "en": "The current state of the Red LED. When it is on or blinking, SAM IoT experienced error(s)."
      },
      "schema": {
        "@type": "Enum",
        "valueSchema": "string",
        "enumValues": [
          {
            "name": "On",
            "displayName": {
              "en": "LED On"
            },
            "enumValue": "On",
            "description": "LED is turned on.",
            "comment": "LED is in the On state."
          },
          {
            "name": "Off",
            "displayName": {
              "en": "LED Off"
            },
            "enumValue": "Off",
            "description": "LED is turned Off.",
            "comment": "LED is in the Off state."
          },
          {
            "name": "Blink",
            "displayName": {
              "en": "LED Blinking"
            },
            "enumValue": "Blink",
            "description": "LED is blinking.",
            "comment": "LED is blinking."
          }
        ]
      },
      "writable": false
    },
    {
      "@type": [
        "Property"
      ],
      "name": "led_y",
      "displayName": {
        "en": "Yellow LED state"
      },
      "description": {
        "en": "Set the state of the Yellow LED.  On, off, or blink."
      },
      "schema": "dtmi:com:Microchip:SAM_IoT_WM:LedState;1",
      "writable": true
    },
    {
      "@type": [
        "Property",
        "TimeSpan"
      ],
      "name": "telemetryInterval",
      "schema": "integer",
      "unit": "second",
      "displayName": {
        "en": "Set Telemetry Interval"
      },
      "description": {
        "en": "Sets interval to send telemetry in seconds"
      },
      "writable": true
    },
    {
      "@type": "Command",
      "name": "reboot",
      "displayName": {
        "en": "Reboot"
      },
      "description": {
        "en": "Reboot SAM IoT with the specified delay.  e.g. PT5S for 5 seconds."
      },
      "request": {
        "name": "delay",
        "schema": "duration",
        "displayName": "Reboot Delay",
        "description": "Number of seconds to delay reboot. e.g. PT5S for 5 seconds."
      },
      "response": {
        "name": "response",
        "displayName": "Response for command",
        "schema": {
          "@type": "Object",
          "fields": [
            {
              "name": "status",
              "displayName": "Message from reboot handler.",
              "schema": "string"
            },
            {
              "name": "delay",
              "displayName": "Number of seconds to delay the reboot.",
              "schema": "integer"
            }
          ]
        }
      }
    }
  ],
  "schemas": [
    {
      "@id": "dtmi:com:Microchip:SAM_IoT_WM:LedState;1",
      "@type": "Enum",
      "valueSchema": "integer",
      "enumValues": [
        {
          "name": "On",
          "displayName": {
            "en": "LED On"
          },
          "enumValue": 1,
          "description": "LED is turned on.",
          "comment": "LED is in the On state."
        },
        {
          "name": "Off",
          "displayName": {
            "en": "LED Off"
          },
          "enumValue": 2,
          "description": "LED is turned Off.",
          "comment": "LED is in the Off state."
        },
        {
          "name": "Blink",
          "displayName": {
            "en": "LED Blinking"
          },
          "enumValue": 3,
          "description": "LED is blinking.",
          "comment": "LED is blinking."
        }
      ]
    }
  ]
}